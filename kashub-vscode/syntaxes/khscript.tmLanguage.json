{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "KHScript",
  "scopeName": "source.khscript",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#variables" },
    { "include": "#operators" },
    { "include": "#commands" },
    { "include": "#functions" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.khscript",
          "match": "//.*$"
        },
        {
          "name": "comment.block.khscript",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.khscript",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.khscript",
              "match": "\\\\."
            },
            {
              "name": "variable.other.interpolated.khscript",
              "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*"
            }
          ]
        },
        {
          "name": "string.quoted.single.khscript",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "variable.other.interpolated.khscript",
              "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.khscript",
          "match": "\\b[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.khscript",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.khscript",
          "match": "\\b(if|else|while|for|loop|break|continue|return)\\b"
        },
        {
          "name": "storage.type.khscript",
          "match": "\\b(let|const|var|fn|function)\\b"
        },
        {
          "name": "constant.language.boolean.khscript",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.khscript",
          "match": "\\b(null|nil|undefined)\\b"
        },
        {
          "name": "keyword.other.special.khscript",
          "match": "\\b(check|recipe|missing|list|toggle|best|all|slot|item|block|entity|hostile|passive|player|forward|back|left|right|up|down)\\b"
        }
      ]
    },
    "commands": {
      "patterns": [
        {
          "name": "support.function.builtin.khscript",
          "match": "\\b(print|log|chat|wait)\\b"
        },
        {
          "name": "support.function.movement.khscript",
          "match": "\\b(moveTo|run|jump|sneak|sprint|swim|stop|tp|teleport|pathfind|lookAt)\\b"
        },
        {
          "name": "support.function.combat.khscript",
          "match": "\\b(attack|setHealth)\\b"
        },
        {
          "name": "support.function.interaction.khscript",
          "match": "\\b(interact|placeBlock|breakBlock|useItem|eat|dropItem|drop|equipArmor)\\b"
        },
        {
          "name": "support.function.inventory.khscript",
          "match": "\\b(inventory|selectSlot|autoCraft|autoTrade)\\b"
        },
        {
          "name": "support.function.scanner.khscript",
          "match": "\\b(scan|scanner|vision)\\b"
        },
        {
          "name": "support.function.visual.khscript",
          "match": "\\b(fullbright|animation)\\b"
        },
        {
          "name": "support.function.system.khscript",
          "match": "\\b(sound|input|ai|onEvent|scripts|eval|getBlock|speed|speedhack|crashguard)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.environment.khscript",
          "match": "\\$[A-Z_][A-Z0-9_]*\\b"
        },
        {
          "name": "variable.other.user.khscript",
          "match": "\\$[a-z_][a-z0-9_]*\\b"
        },
        {
          "name": "variable.other.khscript",
          "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.khscript",
          "match": "(===|!==|==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.khscript",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.khscript",
          "match": "(\\+\\+|--|\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.assignment.khscript",
          "match": "(\\+=|-=|\\*=|/=|%=|=)"
        },
        {
          "name": "keyword.operator.ternary.khscript",
          "match": "(\\?|:)"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.khscript",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    }
  }
}
